# Force pnpm as package manager
engine-strict=true

# Prevent accidental npm/yarn usage
package-manager-strict=true

# Auto-install peers
auto-install-peers=true

# Hoist patterns for better compatibility
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@types/*

# Registry Configuration
# Uncomment and configure for private registry
# registry=https://registry.npmjs.org/
# @targetym:registry=https://npm.pkg.github.com/
# //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# For GitLab Container Registry
# @targetym:registry=https://gitlab.com/api/v4/packages/npm/
# //gitlab.com/api/v4/packages/npm/:_authToken=${GITLAB_TOKEN}

# Publishing settings
# publish-registry=https://npm.pkg.github.com/
